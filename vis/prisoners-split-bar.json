{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A horizontal diverging split bar chart showing the number of male and female prisoners in each region.",
  "data": {
    "url": "https://raw.githubusercontent.com/sheena-22/FIT3179-A2/main/dataset/clean.csv"
  },
  "transform": [
    {"filter": "datum.Year == yearSelect"},
    {
      "calculate": "datum.Sex == 'Female' ? -datum.Total : datum.Total",
      "as": "Total"
    }
  ],
  "width": 1000,
  "height": 500,
  "selection": {
    "gender_highlight": {
      "type": "multi",
      "fields": ["Sex"],
      "bind": "legend"
    }
  },
  "params": [
    {
      "name": "yearSelect",
      "bind": {
        "input": "select",
        "options": [
          2010, 2011, 2012, 2013, 2014, 2015, 2016, 2017, 2018, 2019, 2020
        ],
        "labels": [
          "2010", "2011", "2012", "2013", "2014", "2015", "2016", "2017", "2018", "2019", "2020"
        ],
        "name": "Year Selection:"
      }
    }
  ],
  "mark": {"type": "bar"},
  "encoding": {
    "y": {
      "field": "Region",
      "type": "nominal",
      "sort": "ascending",
      "axis": {"title": "Region"}
    },
    "x": {
      "field": "Total",
      "type": "quantitative",
      "axis": {"title": "Number of Prisoners"},
      "scale": {"domain": [-2000000, 12000000]}
    },
    "color": {
      "field": "Sex",
      "type": "nominal",
      "legend": {"title": "Gender"},
      "scale": {"domain": ["Male", "Female"], "range": ["#1f77b4", "#f24993"]}
    },
    "opacity": {
      "condition": {"selection": "gender_highlight", "value": 1},
      "value": 0.2
    },
    "tooltip": [
      {"field": "Sex", "type": "nominal", "title": "Gender"},
      {"field": "Total", "type": "quantitative", "title": "Number of Prisoners"}
    ]
  }
}
